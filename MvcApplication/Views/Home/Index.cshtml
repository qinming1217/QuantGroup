@{
    ViewBag.Title = "Index";
}
<form action="~/Home/Step1" method="post" id="form1">
    <div class="container-fluid table-bordered" style="width:60%;margin-top:10px;">
        <div class="form-group bg-info" style="height:auto">
            <h3>Step1</h3>
        </div>
        <div class="form-group">
            <label for="txtPhone">手机号码</label>
            <input type="tel" id="txtPhone" name="txtPhone" class="form-control" placeholder="请输入手机号码" required />
        </div>
        <div class="form-group">
            <label>@ViewBag.Message</label>
        </div>
        <div class="form-group">
            <input type="button" class="form-control" onclick="getMobileBill()" value="获取电话账单信息" />
        </div>
        <div class="form-group">
            <input type="button" class="form-control btn-info" value="下一步" onclick="submitPhoneNum()"/>
        </div>
    </div>
</form>


@{
    ViewBag.Title = "Step2";
}
<form action="~/Home/Step2" method="post" id="form2">
    <div class="container-fluid table-bordered" style="width: 60%;margin-top: 10px;">
        <div class="form-group bg-info" style="height:auto">
            <h3>Step2</h3>
        </div>
        <div class="form-group">
            <label for="txtTelNo">服务码</label>
            <input type="text" name="txtPassword" class="form-control" placeholder="请输入服务码" />
        </div>
        <div class="form-group">
            <img src="@Model" /> 
        </div>
        <div class="form-group">
            <label for="txtTelNo">验证码</label>
            <input type="text" name="txtAuthCode" class="form-control" placeholder="请输入验证码" />
        </div>
        <div class="form-group">
            <label>@ViewBag.Message</label>
        </div>
        <div class="form-group">
            <input type="button" class="form-control btn-info" value="重新获取验证码" onclick="submitPassword()" />
        </div>
        <div class="form-group">
            <input type="button" class="form-control btn-info" value="下一步" onclick="submitPassword()" />
        </div>
    </div>
</form>
